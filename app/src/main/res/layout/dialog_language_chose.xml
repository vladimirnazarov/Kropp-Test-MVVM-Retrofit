<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/dialog_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lang_1_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@drawable/button_ripple_effect"
        android:clickable="true"
        android:focusable="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lang_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Беларуская"
            android:textSize="20sp"

            android:layout_marginStart="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lightGray"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_1_dialog"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lang_2_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@drawable/button_ripple_effect"
        android:clickable="true"
        android:focusable="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_1">

        <TextView
            android:id="@+id/lang_2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="English"
            android:textSize="20sp"

            android:layout_marginStart="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separator_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lightGray"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_2_dialog"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lang_3_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@drawable/button_ripple_effect"
        android:clickable="true"
        android:focusable="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_2">

        <TextView
            android:id="@+id/lang_3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Русский"
            android:textSize="20sp"

            android:layout_marginStart="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separator_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lightGray"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_3_dialog"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lang_4_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@drawable/button_ripple_effect"
        android:clickable="true"
        android:focusable="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_3">

        <TextView
            android:id="@+id/lang_4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Český"
            android:textSize="20sp"

            android:layout_marginStart="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separator_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lightGray"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_4_dialog"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lang_5_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@drawable/button_ripple_effect"
        android:clickable="true"
        android:focusable="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_4">

        <TextView
            android:id="@+id/lang_5_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="中国"
            android:textSize="20sp"

            android:layout_marginStart="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>